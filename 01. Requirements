function check {
  echo -ne "$*\t"
}

function ok {
  echo -e "[ \e[92msuccess\e[39m ]"
}

function nok {
  echo -e "[ \e[91mfailure\e[39m ]"
  (( noks = noks + 1 ))
}

function warn {
  echo -e "[ \e[93mwarning\e[39m ]"
}

function format {
  awk -F'\t' '{ printf "%-50s %s\n",$1,$2 }'
}

function slowcat {
[[ -z "${3}" ]] && echo usage: $0 file chunksize waittime && return 1
  local c=0
  local b=$(wc -c <${1})
    while [ ${c} -lt ${b} ]; do
    dd if=${1} bs=1 count=${2} skip=${c} 2>/dev/null
    (( c = c + ${2} ))
    sleep ${3}
  done
}


noks=0
(\
check checking wget; wget --help >/dev/null && ok || nok
check some looooooooooooong explaination; false && ok || nok
check something vague; warn
check long job
)|format
