. lib/functions
noks=0

ftproot=$(grep "^ftp:" /etcpasswd|cut -d ':' -f 6)
ftpconv=$(find /etc/ -name vsftpd.conf 2>/dev/null)
wd=$(pwd)
(\
check opening anon ftp;                echo anonymous_enable=Yes >${ftpconv}    >/dev/null 2>&1 && ok || nok
check checking ftproot;                cd ${ftproot}                            >/dev/null 2>&1 && ok || nok
check restarting vftpd;                sudo restart vsftpd                      >/dev/null 2>&1 && ok || nok
check extracting distribution/patches; bunzip2 -c BSD.tar.gz |tar -xvf -        >/dev/null 2>&1 && ok || nok
)|format
cd $wd

exit $noks
